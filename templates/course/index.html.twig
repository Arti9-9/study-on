{% extends 'base.html.twig' %}

{% block title %}Список курсов{% endblock %}

{% block body %}
    <h1>Список курсов</h1>
    <div class="container-fluid mt-3">
        <div class=" row">
            {% for course in courses %}
            <div class="col-sm-6 my-md-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ course.title }}</h5>
                        {% if course.description %}
                            <p class="card-text">{{ course.description }}</p>
                        {% endif %}
                        <a href="{{ path('app_course_show', {'id': course.id}) }}" class="card-link">Пройти</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p colspan="5">Курсов не найдено</p>

        {% endfor %}
    </div>

    <a  class = "btn btn-secondary" href="{{ path('app_course_new') }}">Создать новый курс</a>
{% endblock %}
